{% if site.settings.analytics %}
<!-- Global Google Site Tag -->
<script async src="https://www.googletagmanager.com/gtag/js?id={{ site.settings.analytics }}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', '{{ site.settings.analytics }}');
</script>
{% endif %}