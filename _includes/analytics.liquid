{%- assign analytics = site.data.settings.webmaster.analytics | default: site.settings.webmaster.analytics -%}
{% if analytics.google %}
<!-- Google Site Tag -->
<script async src="https://www.googletagmanager.com/gtag/js?id={{ analytics.google }}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '{{ analytics.google }}');
</script>
{% endif %}