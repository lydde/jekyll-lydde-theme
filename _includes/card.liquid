<div class="col mb-3">
    <div class="card text-dark bg-light h-100">
        <a href="{{ item.url | absolute_url }}" title="Read More: {{ item.title }}" aria-label="Read the post: {{ item.title }}">
            <img src="{{ item.image | absolute_url }}" class="card-img-top" alt="{{ item.title }}">
        </a>
        <div class="card-body">
            {% include card-categories.html %}
            <h5 class="card-title"><a href="{{ item.url | absolute_url }}" title="Read More: {{ item.title }}" aria-label="Read the post: {{ item.title }}" class="text-muted text-decoration-none">{{ item.title }}</a></h5>
            {% if include.display != "post" %}
            {% include info.html %}
            {% endif %}
            <p class="card-text pt-2">{{ item.excerpt | strip_html | truncatewords: 20 }}</p>
        </div>
        <div class="card-footer text-muted text-end">
            <a href="{{ item.url | absolute_url }}" class="btn btn-primary" title="Read More: {{ item.title }}" aria-label="Read the post: {{ item.title }}">Read More</a>
        </div>
    </div>
</div>